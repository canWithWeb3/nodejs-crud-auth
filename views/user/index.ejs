<%- include('../partials/html-start') %>
<%- include('../partials/header') %>
  
<div class="container my-5">
  <div class="row">
    <div class="col-md-3">
      <%- include('../partials/category-menu.ejs', categories) %>
    </div>

    <div class="col-md-9">
      <% blogs.forEach(b => { %>
        <% if (b.anasayfa && b.onay) { %>
            <div class="card mb-3">
              <a href="/blog-detail/<%= b.blogid %>"
                class="text-dark text-decoration-none">
                <div class="row">
                    <div class="col-md-4">
                        <img src="/static/images/<%= b.resim  %>" class="img-fluid" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= b.baslik %> 
                            </h5>
                            <p class="card-text"><%= b.aciklama %> </p>
                        </div>
                    </div>
                </div>
              </a>
            </div>
        <% } %>
      <% }) %>
    </div>
  </div>
</div>

<%- include('../partials/html-finish') %>