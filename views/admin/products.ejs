<%- include('../partials/html-start') %>
<%- include('../partials/header') %>
  
<div class="container my-5">

  <div class="d-flex justify-content-between align-items-center gap-3 mb-3">
    <h1 class="h3">Products</h1>
    <a href="/admin/products/create" class="btn btn-success">Add</a>
  </div>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th style="width: 130px;"></th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach(p => { %>
        <tr>
          <td><%= p.name %></td>
          <td><%= p.description %></td>
          <td>
            <a href="/admin/products/<%= p._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
            <a href="/admin/products/<%= p._id %>/delete" class="btn btn-danger btn-sm">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('../partials/html-finish') %>