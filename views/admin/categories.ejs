<%- include('../partials/html-start') %>
<%- include('../partials/header') %>
  
<div class="container my-5">

  <div class="d-flex justify-content-between align-items-center gap-3 mb-3">
    <h1 class="h3">Categories</h1>
    <a href="/admin/categories/create" class="btn btn-success">Add</a>
  </div>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th style="width: 130px;"></th>
      </tr>
    </thead>
    <tbody>
      <% categories.forEach(c => { %>
        <tr>
          <td><%= c.name %></td>
          <td>
            <a href="/admin/categories/<%= c._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
            <a href="/admin/categories/<%= c._id %>/delete" class="btn btn-danger btn-sm">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('../partials/html-finish') %>